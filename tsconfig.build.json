{
	"compilerOptions": {
		"lib": ["es2017", "es7", "es6", "dom"],
		"target": "es6",
		"outDir": "./dist",
		"declaration": true,
		"moduleResolution": "node",
		"emitDeclarationOnly": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"typeRoots": ["./node_modules/@types", "./node_modules/@figma"]
	},
	"exclude": ["dist", "node_modules", "__tests__"]
}
